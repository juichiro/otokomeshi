<div class="page-header">
	<h1>レシピの新規投稿</h1>
</div>


<%= form_for(@post) do |f| %>
<%= render 'layouts/error', model: f.object %>

<div class='form-group'>
<div class="input-group">
	<span class="input-group-addon black-addon">レシピ名</span>
<%= f.text_field :name, class:"form-control" %>
</div>
</div>

<div class='form-group'>
  <div class="input-group">
	<span class="input-group-addon black-addon">レシピ</span>
  <%= f.text_area :content, class:'form-control', size:'20x20' %>
  </div>
</div>

<div class='form-group'>
  <div class="input-group">
	<span class="input-group-addon black-addon">写真</span>
  <%= f.file_field :post_image, class:'form-control' %>
  </div>
</div>
<%= f.submit '投稿',class:'btn btn-black1' %>
<% end %>